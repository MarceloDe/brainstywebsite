rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Starred Repos Collection
    match /starred_repos/{repoId} {
      // Version A: Publicly readable for everyone
      allow read: if true;
      
      // Allow writes ONLY IF authenticated (simple protection)
      // For more security, restrict to a specific admin UID
      allow write: if request.auth != null;
    }
    
    // Config Collection
    match /config/{configId} {
      // Only authenticated users can read/write config (e.g., token)
      allow read, write: if request.auth != null;
    }
    
    // Sync State
    match /config/sync_state {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
